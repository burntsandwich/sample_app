<% provide(:title, 'Edit search') %>
<div class="row-fluid">
	<div class="span9">	
		<div class="row-fluid">
			<div class="page-header">
				<h1>Update your search</h1>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span6">
				<h3>Search: <%= @search.name %></h3>
			</div>
			<div class="span6">
				<button id="search_edit_save" class="btn btn-block">Update search</button>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span3">
				<h5>Available keywords</h5>
			</div>
			<div class="span3">
				<h5>Keywords in search</h5>
				<div class="input-append">
					<input id="newterm_available" type="text" class="input-wbtn" placeholder="Enter custom term...">
					<button id="add_term_available" class="btn input-btn" type="button">Add</button>
				</div>
			</div>
			<div class="span3">
				<h5>Blacklisted keywords</h5>
				<div class="input-append">
					<input id="newterm_blacklist" type="text" class="input-wbtn" placeholder="Enter custom term...">
					<button id="add_term_blacklist" class="btn input-btn" type="button">Add</button>
				</div>
			</div>
			<div class="span3">
				<h5>Keyword bin</h5>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span3">
				<ul id="keywords_available" class="connectedSortable">
					<% @recommendations.each do |item| %>
						<li class='keyword-available'><%= item.capitalize %></li>
					<% end %>	
				</ul>
			</div>
			<div class="span3">
				<ul id="keywords_in" class="connectedSortable">
					<% @search.terms.each do |term| %>
						<%= "<li id='#{term.id}' class='keyword-in'>#{term.keyword.capitalize}</li>".html_safe unless term.keyword[0]=="-" %>
					<% end %>
				</ul>
			</div>
			<div class="span3">		
				<ul id="keywords_blacklist" class="connectedSortable">
					<% @search.terms.each do |term| %>
						<%= "<li id='#{term.id}' class='keyword-blacklisted'>#{term.keyword[1..-1].capitalize}</li>".html_safe if term.keyword[0]=="-" %>
					<% end %>
				</ul>
			</div>	
			<div class="span3">		
				<ul id="keywords_bin" class="connectedSortable"></ul>
			</div>	
		</div>
	</div>
	<%= render 'shared/feed_filter' %>
</div>
