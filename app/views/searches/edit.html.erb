<% provide(:title, 'Edit search') %>
<div class="row">
	<div class="page-header">
		<h1>Update your search</h1>
	</div>
	<h3>Search: <%= @search.name %></h3>
</div>

<div class="row">
	<div class="span3">
		<h5>Keywords in search</h5>
		<ul id="sortable1" class="connectedSortable">
			<% @search.terms.each do |term| %>
				<%= "<li id='#{term.id}' class='ui-state-default'>#{term.keyword.capitalize}</li>".html_safe unless term.keyword[0]=="-" %>
			<% end %>
		</ul>
	</div>
	<div class="span3">
		<h5>Available keywords</h5>
		<ul id="sortable2" class="connectedSortable">
			<% @recommendations.each do |item| %>
				<li class='ui-state-default'><%= item.capitalize %></li>
			<% end %>	
		</ul>
	</div>
	<div class="span3">		
		<h5>Blacklisted keywords</h5>
		<ul id="sortable3" class="connectedSortable">
			<% @search.terms.each do |term| %>
				<%= "<li id='#{term.id}' class='ui-state-default'>#{term.keyword[1..-1].capitalize}</li>".html_safe if term.keyword[0]=="-" %>
			<% end %>
		</ul>
	</div>	
</div>
