<% provide(:title, 'Edit search') %>
<h1>Update your search</h1>

<div class="row">
	<div class="span6 offset3">
		<h3>Search query:<h3>
		<h4><%= @search.query %>

		<%= form_for(@search) do |f| %>

			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :query %>
			<%= f.text_field :query %>

			<%= f.fields_for :terms do |builder| %>	
				<%= render 'term_fields', f: builder %>

			<% end %>

			<%= link_to_add_fields "Add term", f, :terms %>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
