<% provide(:title, 'Edit search') %>
<h1>Update your search</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@search) do |f| %>

			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :query %>
			<%= f.text_field :query %>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
