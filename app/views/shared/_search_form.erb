<%= form_for(@search) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="span4">
		<%= f.text_field :name, placeholder: "Enter search name..." %>
		<%= f.text_field :query, placeholder: "Enter an advanced query..." %>
		<%= f.submit "Create", class: "btn btn-large btn-primary" %>
	</div>
<% end %>